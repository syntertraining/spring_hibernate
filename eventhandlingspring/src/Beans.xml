<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="helloworld" class="eventhandlingspring.HelloWorld" >
<property name="message" value="Hello and welcome to spring" />
</bean>
<bean id="cStartEventHandler" class="eventhandlingspring.CStartEventHandler" />
<bean id="cStoppedEventHandler" class="eventhandlingspring.CStopEventHandler" />
</beans>