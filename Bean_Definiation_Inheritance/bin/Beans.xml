<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="helloWorld" class="mypkg.HelloWorld" >
<property name="message1" value ="HelloWorld says message1" />
<property name="message2" value ="HelloWorld says message2" />
</bean>

<bean id="helloIndia" class="mypkg.HelloIndia"  parent="helloWorld">
<property name="message1" value ="HelloIndia says message1" />
<property name="message3" value ="HelloIndia says message3" />
</bean>

</beans>
